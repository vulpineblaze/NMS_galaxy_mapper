<div class="table_container">
  <table id="table_id" class="display">
    <thead>
        <tr>
            <th>User</th>
            <th>ID</th>
            <th>Name</th>
            <th>Class</th>
            <th>Race</th>
            <th>Tags</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0; i<quotes.length; i++) {%>
          <tr>
            <td><%= quotes[i].user %></td>
            <td>
              <%if (auth) { %>
                <a href="detail-<%= quotes[i].guid %>"><%= quotes[i].id %></a>
              <% } else { %> 
                <%= quotes[i].id %>
              <% } %>
            </td>
            <td><%= quotes[i].name %></td>
            <td><%= quotes[i].class %></td>
            <td><%= quotes[i].race %></td>
            <td><%= quotes[i].tags %></td>
            <td>
              <%if (auth) { %>
                <a class="delete_href" href="delete-<%= quotes[i].guid %>">[X]</a>
              <% } else { %> X <% } %>     
            </td>
          </tr>
        <% } %>
    </tbody>
  </table>
</div>

<%if (auth) { %>


